{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "allowJs": false,
    "outDir": "lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*", "./*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}